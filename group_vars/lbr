# group_vars for lbr group
---
group_vars: "lbr"

# Variables for the load balancer server configuration

# HAProxy supports "http" and "tcp". For SSL, SMTP, etc, use "tcp".
mode: http

# Port on which HAProxy should listen
listenport: 80

# A name for the proxy daemon, this wil be the suffix in the logs.
daemonname: haproxy

# Balancing Algorithm. Available options:
# roundrobin, source, leastconn, source, uri
# (if persistance is required use, "source")
balance: roundrobin

# glservers use ansible-role-apache role which defines apache_listen_port

# glservers use haproxy servers
haproxy_backend_servers:
  - name: gl1
    address: 192.168.10.101:80
  - name: gl2
    address: 192.168.10.102:80
  - name: gl3
    address: 192.168.10.103:80
